<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DoughText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">16dp</item>

    </style>
    <style name="EditDoughText">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
        <item name="android:text"></item>
    </style>
    <style name="DayLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">45sp</item>
    </style>
    <style name="CalculateButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Calculate Trays</item>
        <item name=" android:layout_marginLeft">64dp</item>
        <item name=" android:layout_marginRight">64dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>
